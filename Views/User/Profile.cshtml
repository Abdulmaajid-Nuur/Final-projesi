@using WebApplication.Identity;
@model User
<section class="space-ptb">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="agent agent-03 mb-5">
                     <form asp-controller="User" asp-action="Profile" method="post" enctype="multipart/form-data">
                    <div class="row g-0">
                        <div class="col-md-3 text-center border-end">
                            <div class="d-flex flex-column h-100">
                                <div class="agent-avatar p-3 my-auto">
                                    <img id="profilePhoto" alt="AdminLTE Logo" width="200" height="60" class="">
                                    <br />
                                    <input type="file" name="file" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="d-flex h-100 flex-column">
                                <div class="agent-detail">
                                    <div class="d-block d-sm-flex">
                                        <div class="agent-name mb-3 mt-sm-0">
                                            <h2> Bilgileriniz</h2>
                                           
                                        </div>
                                        <div class="agent-social ms-auto">
                                            <ul class="list-unstyled list-inline">
                                                <li class="list-inline-item"><a href="#"><i class="fab fa-facebook-f"></i> </a></li>
                                                <li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i> </a></li>
                                                <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin"></i> </a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="agent-info">
                                       
                                            <div class="row">
                                                <div class="form-group col-md-4 mb-3">
                                                    <input type="text" class="form-control" name="FirstName" id="name" placeholder="Your name" value="@Model.FirstName"> 
                                                </div>
                                                <div class="form-group col-md-4 mb-3">
                                                    <input type="text" class="form-control" name="LastName" id="lastname" placeholder="Your surname" value="@Model.LastName">
                                                </div>
                                                <div class="form-group col-md-4 mb-3">
                                                    <input type="text" class="form-control" name="UserName" id="username" placeholder="Your username" value="@Model.UserName">
                                                </div>
                                                <div class="form-group col-md-4 mb-3">
                                                    <input type="email" class="form-control" name="Email" id="email" placeholder="Your email" value="@Model.Email">
                                                </div>
                                                <div class="form-group col-md-4 mb-3">
                                                    <input type="tel" class="form-control" name="PhoneNumber" id="phone" placeholder="Your phone" value="@Model.PhoneNumber">
                                                </div>
                                                <div class="form-group col-md-4 mb-3">
                                                    <input type="password" class="form-control" name="Password" id="password" placeholder="Your password" value="@Model.Password">
                                                </div>
                                                <div class="col-md-12">
                                                    <input class="btn btn-primary" type="submit" value="Güncelle">
                                                </div>
                                            </div>
                                
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            url: '/User/GetUserPP', // Controller ve action adınızı buraya ekleyin
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var profilePhotoUrl = data;
                $('#profilePhoto').attr('src', "/img/" + data);
                console.log(data);
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
            }
        });
    });
</script>