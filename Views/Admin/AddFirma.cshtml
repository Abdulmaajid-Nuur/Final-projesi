@model AccountModel;
@{
    ViewData["Title"] = "AddFirma";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-9">
        
        <form style="margin-top:100px" asp-controller="Admin" asp-action="AddFirma" method="post" enctype="multipart/form-data">
            <br />
        <h3>Firma Ekle</h3>
        <hr style="color:white" />
        <br />
                    <div class="row" >

           <div class="col-md-6">
               <label>Firma Adı</label>
                    <input class="form-control" type="text" asp-for="@Model.RegisterModel.Name" />


           </div>
           <div class="col-md-6">
                    <label>Firma Kullanıcı Adı</label>
                    <input class="form-control" type="text" asp-for="@Model.RegisterModel.UserName" />
           </div>

        </div>
            <br />
         <div class="row" >
       <div class="col-md-6">
            <label>Firma Telefon</label>
                    <input class="form-control" type="text" asp-for="@Model.RegisterModel.Phone" />

           </div>
           <div class="col-md-6">
                    <label>Firma Email</label>
                    <input class="form-control" type="text" asp-for="@Model.RegisterModel.Email" />
           </div>

        </div>
            <br />
        <div class="row">
             <div class="col-md-6">
                    <label>Firma Resmi</label>
               <input class="form-control" type="file" name="file" / >

           </div>
           <div class="col-md-6">
                    <label>Firma Şifresi</label>
                    <input class="form-control" type="password" asp-for="@Model.RegisterModel.Password" />
           </div>

        </div>
        <br />
        <button type="submit" class="btn btn-primary">Firma Kaydet</button>
        </form>


           

      



    </div>
</div>